{
  "name": "offline_pipeline_demo",
  "version": "1.0.0",
  "description": "Offline batch pipeline with idempotency, checkpointing, and retry logic",
  "stages": [
    {
      "name": "stage_copy",
      "processor": "bin/stage_copy.py",
      "inputs": ["data/input/sample.txt"],
      "outputDir": "data/work",
      "params": {},
      "idempotency": { 
        "enabled": true 
      },
      "checkpoint": { 
        "enabled": false 
      },
      "retry": {
        "maxAttempts": 3,
        "baseDelay": 1.0,
        "jitter": 0.5
      },
      "resources": {
        "maxMemoryMB": 512,
        "maxCpuCores": 1
      }
    },
    {
      "name": "stage_upper",
      "processor": "bin/stage_upper.py",
      "inputs": ["data/work/sample.txt"],
      "outputDir": "data/output",
      "params": {},
      "idempotency": { 
        "enabled": true 
      },
      "checkpoint": { 
        "enabled": true, 
        "lineInterval": 50 
      },
      "retry": {
        "maxAttempts": 3,
        "baseDelay": 1.0,
        "jitter": 0.5
      },
      "resources": {
        "maxMemoryMB": 512,
        "maxCpuCores": 1
      }
    }
  ]
}